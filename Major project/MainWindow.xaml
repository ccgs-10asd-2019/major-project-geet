<Window x:Class="Major_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Major_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="770">
    <Grid Opacity="0.8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <ImageBrush ImageSource="images/blue.jpg" TileMode="Tile" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="196*" />
            <RowDefinition Height="261*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FF813A47" Margin="159,5,20,5"/>
        <ListBox x:Name="chat" HorizontalAlignment="Left" Height="413" Margin="159,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="586" Background="#66813A47" Grid.RowSpan="2" BorderBrush="#00ABADB3">
        </ListBox>
        <TextBox x:Name="message_textbox" HorizontalAlignment="Left" Height="24" Margin="159,225,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="527" Background="#B2813747" Foreground="White" FontFamily="STIXGeneral"/>
        <Button x:Name="Send_button" Content="Send&#xD;&#xA;" HorizontalAlignment="Left" Margin="686,225,0,0" Grid.Row="2" VerticalAlignment="Top" Width="59" Height="24" Background="#FF172E64" Click="SendMessage" Foreground="White"/>
        <ListBox x:Name="Server_list" HorizontalAlignment="Left" Height="254" Margin="10,193,0,0" Grid.Row="1" VerticalAlignment="Top" Width="123" Background="#FF172E64" Grid.RowSpan="2">

        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" VerticalAlignment="Top" Width="123" Background="#FF172E64" Grid.RowSpan="2">

            <Button Content="Settings" Width="53" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}"/>
            <Button x:Name="logout_button" Content="Logout" Width="50" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Click="Logout_clicked"/>
        </ListBox>
        <Rectangle Fill="#FF172E64" HorizontalAlignment="Left" Height="26" Margin="10,167,0,0" Grid.Row="1" VerticalAlignment="Top" Width="123"/>
        <TextBlock TextWrapping="Wrap" Text="Server list" Height="19" Width="96" Foreground="White" Margin="20,0,0,4" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Border BorderBrush="#FFABADAF" BorderThickness="1" HorizontalAlignment="Left" Height="26" Margin="10,167,0,0" Grid.Row="1" VerticalAlignment="Top" Width="123"/>
    </Grid>
</Window>
