<Window x:Class="Major_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Major_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="760">
    <Grid Opacity="0.8">
        <Grid.Background>
            <ImageBrush ImageSource="images/blue.jpg" TileMode="Tile" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="66*" />
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FF813A47"/>
        <ListBox x:Name="chat" HorizontalAlignment="Left" Height="413" Margin="159,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="586" Background="#66813A47" Grid.RowSpan="2" BorderBrush="#00ABADB3">
        </ListBox>
        <TextBox x:Name="message_textbox" HorizontalAlignment="Left" Height="24" Margin="159,224.75,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="527" Background="#B2813747" Foreground="White" FontFamily="STIXGeneral"/>
        <Button x:Name="send_button" Content="Button" HorizontalAlignment="Left" Margin="686,224.75,0,0" Grid.Row="2" VerticalAlignment="Top" Width="59" Height="24" Background="#FF172E64" Click="push_send_button"/>
       
        
        <ListBox HorizontalAlignment="Left" Height="280" Margin="10,167,0,0" Grid.Row="1" VerticalAlignment="Top" Width="123" Background="#FF172E64" Grid.RowSpan="2">
            <TextBlock TextWrapping="Wrap" Text="Server list" Height="19" Width="96" Foreground="White"/>
        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="160" Margin="10,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="123" Background="#FF172E64"/>

    </Grid>
</Window>
