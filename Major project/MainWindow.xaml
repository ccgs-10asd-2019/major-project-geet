        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500">
    <Grid Opacity="0.8">
        <Grid.Background>
            <ImageBrush ImageSource="images/background.png" TileMode="Tile"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFC9F7FF"/>
        <ListBox x:Name="chat" HorizontalAlignment="Left" Height="848" Margin="97,9.714,0,0" Grid.Row="1" VerticalAlignment="Top" Width="1387">
        </ListBox>
        <TextBox HorizontalAlignment="Left" Height="48" Margin="97,862.714,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="1224"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="1326,862.714,0,0" Grid.Row="1" VerticalAlignment="Top" Width="158" Height="48"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="92" Margin="0,36.714,0,0" Grid.Row="1" VerticalAlignment="Top" Width="92"/>

    </Grid>
</Window>
