<Window x:Class="Major_project.Themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Major_project"
        mc:Ignorable="d"
        Title="Themes" Height="450" Width="800">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ASD major project images/colourfull background.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Rectangle x:Name="header_block" Fill="#FF6AC2FF" HorizontalAlignment="Left" Height="66" Stroke="Black" VerticalAlignment="Top" Width="795" Grid.ColumnSpan="2" StrokeThickness="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="38,10,0,0" TextWrapping="Wrap" Text="Themes" VerticalAlignment="Top" Height="46" Width="145" FontSize="36" FontFamily="Segoe UI Semibold"/>
        <Rectangle Fill="#FFFF9A3E" HorizontalAlignment="Left" Height="356" Margin="0,66,0,0" Stroke="Black" VerticalAlignment="Top" Width="121" Grid.RowSpan="3" StrokeThickness="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,50,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Colour scheme" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,150,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Background" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Grid.RowSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,70,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Text fonts" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="Colour1" Content="Button" HorizontalAlignment="Left" Margin="185,49.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="ASD major project images/Buttons-PNG-Image-84305.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Colour_Scheme" Content="Button" HorizontalAlignment="Left" Margin="312,49.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="186,150.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="74"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="312,150.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="76"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="186,68.5,0,0" Grid.Row="2" VerticalAlignment="Top" Width="74"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="312,68.5,0,0" Grid.Row="2" VerticalAlignment="Top" Width="76"/>

    </Grid>
</Window>
